		task ("Click on the drop-down and make sure the role are enabled") {
			CP2TeamMembers.assertDropDownOptionsEnabled();
		}

		task ("Delete the entries and objects created") {
			CustomerPortal.deleteEntryAccountFlag(entry = "ERC-002");
		}
	}

}