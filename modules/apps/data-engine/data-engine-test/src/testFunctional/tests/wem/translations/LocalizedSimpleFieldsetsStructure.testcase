	@description = "This is a test for LPS-123538. As Content Creator, I want to define reusable translations when creating WEM Structures with fieldset"
	@priority = "4"
	test DefaultTitlePersistsUponFirstlyTranslatingForAnotherLocale {
		WebContentNavigator.openWebContentAdmin(siteURLKey = "test-site-name");

		NavItem.gotoStructures();

		WebContentStructures.addCP();

		Navigator.gotoNavTab(navTab = "Fieldsets");

		Click(locator1 = "FormViewBuilder#CREATE_NEW_FIELD_SETS");

		Navigator.gotoNavTab(navTab = "Fields");

		DoubleClick(
			key_fieldName = "Text",
			locator1 = "Sidebar#ADD_FIELD_NAME");

		Pause(locator1 = "3000");

		AssertVisible(
			key_fieldFieldLabel = "Text",
			locator1 = "DDMEditStructure#FORM_FIELD_CONTAINER_LABEL");

		PortletEntry.changeLocale(
			locale = "pt-BR",
			modal = "true");

		Type(
			locator1 = "FormViewBuilder#FIELD_SET_NAME",
			value1 = "New Fieldset pt-BR");

		DataEngine.editFieldLabel(
			fieldFieldLabel = "Text",
			fieldFieldLabelEdit = "Text pt-BR",
			fieldsetModal = "true");

		PortletEntry.changeLocale(
			locale = "en-US",
			modal = "true");

		Type(
			locator1 = "FormViewBuilder#FIELD_SET_NAME",
			value1 = "New Fieldset en-US");

		DataEngine.editFieldLabel(
			fieldFieldLabel = "Text",
			fieldFieldLabelEdit = "Text en-US",
			fieldsetModal = "true");

		Click(locator1 = "Modal#SAVE_BUTTON");

		Alert.viewSuccessMessage();

		DataEngine.addFieldsets(fieldsetName = "New Fieldset en-US");

		DataEngine.viewFieldsetTranslation(
			fieldNameList = "Text",
			fieldsetName = "New Fieldset",
			localeList = "en-US,pt-BR");
	}

