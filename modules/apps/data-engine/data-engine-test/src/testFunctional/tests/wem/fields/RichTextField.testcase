			fieldFieldLabel = "Test",
			fieldName = "Rich Text");

		DataEngine.editFieldRepeatable(fieldFieldLabel = "Test");

		WebContentStructures.saveCP(structureName = "New Structure");

		Navigator.gotoNavTab(navTab = "Web Content");

		WebContentNavigator.gotoAddWithStructureCP(structureName = "New Structure");

		WebContent.addWithStructureCP(
			structureName = "New Structure",
			webContentTitle = "WC WebContent Title");

		DataEngine.addRepeatableField(fieldName = "Test");

		WebContent.assertFieldRepeated(fieldName = "RichText");

		Click(locator1 = "DDMField#REMOVE_REPEATED_FIELD");

