	@description = "This is a test for LPS-123537. As Content Creator, I want to leverage the structures’ translations with nested field when creating a new Web Content"
	@priority = "5"
	test CheckStructureTranslationsOnWebContent {
		WebContentNavigator.openWebContentAdmin(siteURLKey = "test-site-name");

		NavItem.gotoStructures();

		WebContentStructures.addCP(structureName = "My Structure Name 1");

		DataEngine.addField(
			fieldFieldLabel = "Text",
			fieldName = "Text");

		DataEngine.addFieldNested(
			fieldFieldLabel = "Date",
			fieldName = "Date",
			targetFieldLabel = "Text");

		DataEngine.editFieldLabel(
			fieldFieldLabel = "Fields Group",
			fieldFieldLabelEdit = "Group");

		WebContentStructures.addLocalization(
			locale = "pt_BR",
			localization1Name = "Minha Estrutura Nome 1");

		FormViewBuilder.editFieldLabel(
			fieldLabel = "Text",
			label = "Texto");

		FormViewBuilder.editFieldLabel(
			fieldLabel = "Date",
			label = "Data");

		DataEngine.editFieldLabel(
			fieldFieldLabel = "Group",
			fieldFieldLabelEdit = "Grupo");

		DDLDataDefinition.save();

		Navigator.gotoNavItem(navItem = "Web Content");

		LexiconEntry.gotoAdd();

		MenuItem.click(menuItem = "My Structure Name 1");

		PortletEntry.changeLocale(locale = "pt_BR");

		AssertElementPresent(
			fieldGroupLabel = "Grupo",
			locator1 = "DataEngineBuilder#FORM_FIELDS_GROUP_NESTED_LABEL");

		AssertElementPresent(
			key_fieldLabel = "Texto",
			locator1 = "FormFields#LABEL");

		AssertElementPresent(
			key_fieldLabel = "Data",
			locator1 = "FormFields#LABEL");
	}

