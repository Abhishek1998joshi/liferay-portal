@component-name = "portal-solutions"
definition {

	property osgi.modules.includes = "site-initializer-testray";
	property portal.release = "false";
	property portal.upstream = "true";
	property testray.main.component.name = "Testray 2";

	setUp {
		TestCase.setUpPortalInstance();

		User.firstLoginPG();

		Testray.createTestraySite(siteName = "Testray 2");

		Refresh();
	}

	tearDown {
		var testPortalInstance = PropsUtil.get("test.portal.instance");

		Testray.tearDownCP();

		if ("${testPortalInstance}" == "true") {
			PortalInstances.tearDownCP();
		}
	}

	@description = "LPS-150428 - Verify that clicking on the table redirects to a results history page."
    @priority = "5"
    test CanGoToResultsPage {
        ApplicationsMenu.gotoSite(site = "Testray 2");

		Testray.createProjectTestray(key_name = "Liferay Portal 7.4");

		Click(
			key_projectName = "Liferay Portal 7.4",
			locator1 = "Testray#PROJECT_NAME_BUTTON");

        
        TestrayRoutines.createRoutineTestray(key_name = "Routine Test");

        Click(
            locator1 = "Testray#PROJECT_NAME_BUTTON",
            key_projectName = "Routine Test");

        AssertElementPresent(
            locator1 = "Testray#NAME_TITLE",
            key_title = "Build History");
    }

    @description = "LPS-151095 - Verify that clicking on Incomplete in the subtitle makes it disabled"
    @priority = "3"
    test CanIncompleteStatusBeDisabled {
        ApplicationsMenu.gotoSite(site = "Testray 2");

		Testray.createProjectTestray(key_name = "Liferay Portal 7.4");

		Click(
			key_projectName = "Liferay Portal 7.4",
			locator1 = "Testray#PROJECT_NAME_BUTTON");

        
        TestrayRoutines.createRoutineTestray(key_name = "Routine Test");

        Click(
            locator1 = "Testray#PROJECT_NAME_BUTTON",
            key_projectName = "Routine Test");

        Click(
            locator1 = "TestrayRoutines#STATUS_BUILD_HISTORY",
            key_item = "INCOMPLETE");

        AssertElementPresent(
            locator1 = "TestrayRoutines#STATUS_BUILD_HISTORY_DISABLED",
            key_item = "INCOMPLETE");
    }

