@component-name = "portal-calendar"
definition {

	property custom.properties = "default.layout.template.id=1_column${line.separator}company.default.time.zone=America/Los_Angeles";
	property portal.release = "true";
	property portal.upstream = "true";
	property testray.main.component.name = "Calendar";

	var pageName = "Calendar Page";
	var portletName = "Calendar";

	setUp {
		TestCase.setUpPortalInstance();

		User.firstLoginPG();

		//ProductMenu.gotoPortlet(
		//	category = "Site Builder",
		//	portlet = "Pages");
		//PagesAdmin.addPublicPage(
		//	pageName = "Calendar Page",
		//	sitePageType = "Widget Page");
		//PagesAdmin.configurePage(
		//	columnName = "1 Column",
		//	pageName = "Calendar Page",
		//	privacy = "Public Pages",
		//	sitePageType = "Widget Page");

		Navigator.gotoPage(pageName = "Calendar Page");

		//Portlet.addPG(
		//	pageName = "Calendar Page",
		//	portletName = "Calendar");

	}

	tearDown {
		var testPortalInstance = PropsUtil.get("test.portal.instance");

		if ("${testPortalInstance}" == "true") {
			PortalInstances.tearDownCP();
		}
		else {
			Navigator.gotoPage(pageName = "Calendar Page");

			if (IsElementPresent(locator1 = "Calendar#SCHEDULER_EVENT_GENERIC")) {
				CalendarEvent.tearDown();
			}

			Calendar.tearDown();

			CalendarConfiguration.tearDown();

			PagesAdmin.tearDownCP();
		}
	}

	@description = "LRQA-71891 - Verify that the user can apply the selected template"
	@priority = "3"
	test CanApplySelectedTemplate {
		ConfigurationTemplate.gotoCalendarOptions(option = "Configuration Templates");

		ConfigurationTemplate.saveConfigurationTemplateCalendar(configurationName = "Configuration Name");

		ConfigurationTemplate.viewConfigurationTemplateTableName(configurationName = "Configuration Name");

		ConfigurationTemplate.optionSelectedTemplate(
			configurationName = "Configuration Name",
			item = "Apply");
	}

	@description = "LRQA-71891 - Verify that the user can delete a template"
	@priority = "3"
	test CanDeleteTemplate {
		ConfigurationTemplate.gotoCalendarOptions(option = "Configuration Templates");

		ConfigurationTemplate.saveConfigurationTemplateCalendar(configurationName = "Configuration Name");

		ConfigurationTemplate.viewConfigurationTemplateTableName(configurationName = "Configuration Name");

		ConfigurationTemplate.optionSelectedTemplate(
			configurationName = "Configuration Name",
			item = "Delete");

		ConfigurationTemplate.confirmDeleteSelectedTemplate();

		ConfigurationTemplate.notViewConfigurationTemplateTableName(configurationName = "Configuration Name");
	}

	@description = "LRQA-71891 - Verify that the user can filter by Modified Date"
	@ignore = "Test Stub"
	@priority = "2"
	test CanFilterByTemplateModifiedDate {

		// TODO LRQA-71975 CanFilterByTemplateModifiedDate pending implementation

	}

	@description = "LRQA-71891 - Verify that the user can filter by Name"
	@priority = "2"
	test CanFilterByTemplateName {
		ConfigurationTemplate.gotoCalendarOptions(option = "Configuration Templates");

		ConfigurationTemplate.saveConfigurationTemplateCalendar(configurationName = "First template name");

		Navigator.gotoPage(pageName = "Calendar Page");

		ConfigurationTemplate.gotoCalendarOptions(option = "Configuration Templates");

		ConfigurationTemplate.saveConfigurationTemplateCalendar(configurationName = "Second template name");

		ManagementBar.setFilterAndOrder(filterBy = "Name");

		ConfigurationTemplate.viewOrderFieldsTable(tableOrder = "First template name,Second template name");

		Workflow.clickRevertSortDirection();

		ConfigurationTemplate.viewOrderFieldsTable(tableOrder = "Second template name,First template name");
	}

	@description = "LRQA-71891 - Verify that the user can save Current Configuration as a template"
	@priority = "3"
	test CanSaveCurrentConfigurationAsTemplate {
		ConfigurationTemplate.gotoCalendarOptions(option = "Configuration Templates");

		ConfigurationTemplate.saveConfigurationTemplateCalendar(configurationName = "Configuration Name");

		ConfigurationTemplate.viewConfigurationTemplateTableName(configurationName = "Configuration Name");
	}

}