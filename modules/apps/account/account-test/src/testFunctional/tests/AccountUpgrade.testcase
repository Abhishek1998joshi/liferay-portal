@component-name = "portal-upgrades"
definition {

	property database.types = "db2,mariadb,mysql,oracle,postgresql,sqlserver,sybase";
	property portal.release = "true";
	property portal.upstream = "true";
	property testray.main.component.name = "Upgrades User and System Management";

	setUp {
		SignIn.signIn();

		var portalURL = PropsUtil.get("portal.url");

		AssertLocation(value1 = "${portalURL}/web/guest?SM_USER=test@liferay.com");

		ApplicationsMenu.gotoPortlet(
			category = "Configuration",
			panel = "Control Panel",
			portlet = "Search");

		SearchAdministration.executeSearchActions(actionsDescription = "Reindex search indexes.");
	}

	@priority = "4"
	test AddBusinessAccountAfterUpgrade {
		property data.archive.type = "data-archive-portal";
		property database.types = "db2,mariadb,mysql,oracle,postgresql,sybase";
		property portal.version = "6.2.10.21";

		JSONAccountEntry.addAccountEntry(
			accountEntryName = "Accounts Name",
			accountEntryType = "Business");

		Accounts.openAccountsAdmin();

		LexiconEntry.viewEntryName(rowEntry = "Accounts Name");
	}

}