{
	"$id": "http://example.com/root.json",
	"$schema": "http://json-schema.org/draft-07/schema#",
	"additionalProperties": false,
	"definitions": {
		"FrontendToken": {
			"additionalProperties": false,
			"properties": {
				"defaultValue": {
					"$ref": "#/definitions/TokenValue",
					"title": "The Default Value of the Token"
				},
				"editorType": {
					"enum": [
						"ColorPicker"
					],
					"title": "The Editor Type Used to Edit the Token",
					"type": "string"
				},
				"label": {
					"title": "The Language Key of the Token Label",
					"type": "string"
				},
				"mappings": {
					"items": {
						"additionalProperties": false,
						"not": {
							"type": "null"
						},
						"properties": {
							"type": {
								"title": "The Type of the Mapping",
								"type": "string"
							},
							"value": {
								"title": "The Value of the Mapping for the Token",
								"type": "string"
							}
						},
						"required": [
							"type",
							"value"
						],
						"type": "object"
					},
					"title": "The Mappings of the Token",
					"type": "array"
				},
				"name": {
					"title": "Name of the Token",
					"type": "string"
				},
				"type": {
					"enum": [
						"Boolean",
						"Integer",
						"Number",
						"String"
					],
					"title": "Type of the Token",
					"type": "string"
				},
				"validValues": {
					"items": {
						"additionalProperties": false,
						"not": {
							"type": "null"
						},
						"properties": {
							"label": {
								"title": "The Language Key of the Valid Value",
								"type": "string"
							},
							"value": {
								"$ref": "#/definitions/TokenValue"
							}
						},
						"required": [
							"value"
						],
						"title": "Valid Value",
						"type": "object"
					},
					"minItems": 1,
					"title": "Valid Values",
					"type": "array"
				}
			},
			"required": [
				"mappings",
				"name",
				"type"
			],
			"type": "object"
		},
		"TokenCategory": {
			"additionalProperties": false,
			"properties": {
				"label": {
					"title": "The Language Key to Obtain the Label of the Token Category",
					"type": "string"
				},
				"name": {
					"title": "Name of the Token Category",
					"type": "string"
				},
				"tokenSets": {
					"items": {
						"$ref": "#/definitions/TokenSet"
					},
					"title": "The Token Sets of the Token Category",
					"type": "array"
				}
			},
			"required": [
				"name",
				"tokenSets"
			],
			"type": "object"
		},
		"TokenSet": {
			"additionalProperties": false,
			"properties": {
				"label": {
					"title": "The Language Key to Obtain the Label of the Token Set",
					"type": "string"
				},
				"name": {
					"title": "Name of the Token Set",
					"type": "string"
				},
				"tokens": {
					"items": {
						"$ref": "#/definitions/FrontendToken"
					},
					"title": "The Tokens of the Token Set",
					"type": "array"
				}
			},
			"required": [
				"tokens"
			],
			"type": "object"
		},
		"TokenValue": {
			"type": [
				"boolean",
				"integer",
				"number",
				"string"
			]
		}
	},
	"properties": {
		"tokenCategories": {
			"items": {
				"$ref": "#/definitions/TokenCategory"
			},
			"title": "The Token Categories",
			"type": "array"
		}
	},
	"required": [
		"tokenCategories"
	],
	"title": "The Design Tokens Definition Schema",
	"type": "object"
}