@component-name = "portal-object"
definition {

	property portal.release = "true";
	property portal.upstream = "true";
	property testray.main.component.name = "Object";

	setUp {
		TestCase.setUpPortalInstance();

		User.firstLoginPG();
	}

	tearDown {
		var testPortalInstance = PropsUtil.get("test.portal.instance");

		if ("${testPortalInstance}" == "true") {
			PortalInstances.tearDownCP();
		}
	}

	@description = "LPS-135548 - Verify that user can view custom objects"
	@ignore = "Test Stub"
	@priority = "5"
	test ViewCustomObjects {
		property portal.acceptance = "true";

		// TODO LPS-137098 ViewSystemObjects pending implementation

	}

	@description = "LPS-135548 - Verify that user can view system objects"
	@ignore = "Test Stub"
	@priority = "5"
	test ViewSystemObjects {
		property portal.acceptance = "true";

		var pAuth = Api.getPAuth();
		var portalURL = PropsUtil.get("portal.url");

		Navigator.openSpecificURL(url = "${portalURL}/group/guest/~/control_panel/manage?p_p_id=com_liferay_object_web_internal_object_definitions_portlet_ObjectDefinitionsPortlet&p_p_lifecycle=0&p_p_state=maximized&p_v_l_s_g_id=20125&p_p_auth=${pAuth}");

		CreateObject.viewSystemObject(name = "CommerceOrder");
		CreateObject.viewSystemObject(name = "User");
	}

}