definition {

	macro createObjectPageTemplate {
		VisualizeObjectDisplayPageTemplate.openPageTemplate();

		Click(locator1 = "VisualizeObjectDisplayPageTemplate#SELECT_BLANK_OBJECT_DISPLAY_PAGE_TEMPLATE");

		Type(
			locator1 = "VisualizeObjectDisplayPageTemplate#NAME_OBJECT_DISPLAY_PAGE_TEMPLATE",
			value1 = "${pageTemplateName}");

		Select(
			locator1 = "VisualizeObjectDisplayPageTemplate#OBJECT_CONTENT_TYPE",
			value1 = "${contentType}");

		Select(
			locator1 = "VisualizeObjectDisplayPageTemplate#OBJECT_SUBTYPE",
			value1 = "${subtype}");
	}

	macro openPageTemplate {
		Navigator.openSpecificURL(url = "/group/guest/~/control_panel/manage?p_p_id=com_liferay_layout_page_template_admin_web_portlet_LayoutPageTemplatesPortlet");

		NavItem.gotoDisplayPages();

		Click.javaScriptClick(locator1 = "VisualizeObjectDisplayPageTemplate#ADD_PLUS_BUTTON");
	}

	macro validateObjectContentType {
		AssertSelectedLabel(
			locator1 = "VisualizeObjectDisplayPageTemplate#OBJECT_CONTENT_TYPE",
			value1 = "${contentType}");
	}

	macro validateObjectSubtype {
		AssertSelectedLabel(
			locator1 = "VisualizeObjectDisplayPageTemplate#OBJECT_SUBTYPE",
			value1 = "${subtype}");
	}

}