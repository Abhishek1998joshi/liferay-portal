{
	"$id": "http://example.com/root.json",
	"$schema": "http://json-schema.org/draft-07/schema#",
	"additionalProperties": false,
	"definitions": {
		"FragmentImage": {
			"additionalProperties": false,
			"properties": {
				"title": {
					"oneOf": [
						{
							"$ref": "#/definitions/InlineValue"
						},
						{
							"$ref": "#/definitions/MappedValue"
						}
					]
				},
				"url": {
					"oneOf": [
						{
							"$ref": "#/definitions/InlineValue"
						},
						{
							"$ref": "#/definitions/MappedValue"
						}
					]
				}
			},
			"title": "The FragmentImage Schema",
			"type": "object"
		},
		"InlineValue": {
			"additionalProperties": false,
			"properties": {
				"value": {
					"title": "The value Schema",
					"type": "string"
				},
				"value_i18n": {
					"additionalProperties": {
						"type": "string"
					},
					"title": "The value_i18n Schema",
					"type": "object"
				}
			},
			"title": "The InlineValue Schema",
			"type": "object"
		},
		"MappedValue": {
			"additionalProperties": false,
			"properties": {
				"classNameId": {
					"title": "The classNameId Schema",
					"type": "integer"
				},
				"classPK": {
					"title": "The classPK Schema",
					"type": "integer"
				},
				"fieldId": {
					"title": "The fieldId Schema",
					"type": "string"
				}
			},
			"title": "The MappedValue Schema",
			"type": "object"
		},
		"PageElement": {
			"additionalProperties": false,
			"allOf": [
				{
					"if": {
						"properties": {
							"type": {
								"const": "Root"
							}
						}
					},
					"then": {
						"properties": {
							"definition": {
								"$ref": "#/definitions/RootDefinition"
							}
						}
					}
				},
				{
					"if": {
						"properties": {
							"type": {
								"const": "Section"
							}
						}
					},
					"then": {
						"properties": {
							"definition": {
								"$ref": "#/definitions/SectionDefinition"
							}
						}
					}
				}
			],
			"properties": {
				"definition": {
					"title": "The definition Schema",
					"type": "object"
				},
				"pageElements": {
					"items": {
						"$ref": "#/definitions/PageElement"
					},
					"title": "The pageElements Schema",
					"type": "array"
				},
				"type": {
					"enum": [
						"Column",
						"DropZone",
						"Fragment",
						"Root",
						"Row",
						"Section"
					],
					"title": "The type Schema",
					"type": "string"
				}
			},
			"required": [
				"type"
			],
			"title": "The PageElement Schema",
			"type": "object"
		},
		"RootDefinition": {
			"additionalProperties": false,
			"title": "The RootDefinition Schema",
			"type": "object"
		},
		"SectionDefinition": {
			"additionalProperties": false,
			"properties": {
				"backgroundColorCssClass": {
					"title": "The backgroundColorCssClass Schema",
					"type": "string"
				},
				"backgroundImage": {
					"$ref": "#/definitions/FragmentImage",
					"title": "The backgroundImage Schema",
					"type": "object"
				},
				"layout": {
					"additionalProperties": false,
					"properties": {
						"containerType": {
							"enum": [
								"Fixed",
								"Fluid"
							],
							"title": "The containerType Schema",
							"type": "string"
						},
						"paddingBottom": {
							"enum": [
								0,
								1,
								2,
								4,
								6,
								8,
								10
							],
							"minimum": 0,
							"title": "The paddingBottom Schema",
							"type": "integer"
						},
						"paddingHorizontal": {
							"enum": [
								0,
								1,
								2,
								4,
								6,
								8,
								10
							],
							"minimum": 0,
							"title": "The paddingHorizontal Schema",
							"type": "integer"
						},
						"paddingTop": {
							"enum": [
								0,
								1,
								2,
								4,
								6,
								8,
								10
							],
							"minimum": 0,
							"title": "The paddingTop Schema",
							"type": "integer"
						}
					},
					"title": "The layout Schema",
					"type": "object"
				}
			},
			"title": "The SectionDefinition Schema",
			"type": "object"
		}
	},
	"properties": {
		"pageElement": {
			"$id": "#/properties/pageElement",
			"$ref": "#/definitions/PageElement",
			"title": "The pageElement Schema"
		}
	},
	"required": [
		"pageElement"
	],
	"title": "The PageDefinition Schema",
	"type": "object"
}