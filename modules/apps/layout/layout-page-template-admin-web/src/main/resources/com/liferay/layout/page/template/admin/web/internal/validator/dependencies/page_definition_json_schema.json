{
	"$id": "http://example.com/root.json",
	"$schema": "http://json-schema.org/draft-07/schema#",
	"additionalProperties": false,
	"definitions": {
		"PageElement": {
			"additionalProperties": false,
			"allOf": [
				{
					"if": {
						"properties": {
							"type": {
								"const": "Root"
							}
						}
					},
					"then": {
						"properties": {
							"definition": {
								"$ref": "#/definitions/RootDefinition"
							}
						}
					}
				}
			],
			"properties": {
				"definition": {
					"title": "The definition Schema",
					"type": "object"
				},
				"pageElements": {
					"items": {
						"$ref": "#/definitions/PageElement"
					},
					"title": "The pageElements Schema",
					"type": "array"
				},
				"type": {
					"enum": [
						"Column",
						"DropZone",
						"Fragment",
						"Root",
						"Row",
						"Section"
					],
					"title": "The type Schema",
					"type": "string"
				}
			},
			"required": [
				"type"
			],
			"title": "The PageElement Schema",
			"type": "object"
		},
		"RootDefinition": {
			"additionalProperties": false,
			"title": "The RootDefinition Schema",
			"type": "object"
		}
	},
	"properties": {
		"pageElement": {
			"$id": "#/properties/pageElement",
			"$ref": "#/definitions/PageElement",
			"title": "The pageElement Schema"
		}
	},
	"required": [
		"pageElement"
	],
	"title": "The PageDefinition Schema",
	"type": "object"
}