definition {

	@summary = "This calls the JSON WS API to add a Document file shortcut"
	macro addShortcut {
		var fileEntryId = JSONDocument.getFileEntryId(
			dmDocumentTitle = "${dmDocumentTitle}",
			folderId = "${folderId}",
			groupName = "${groupName}",
			portalURL = "${baseURL}");
		var portalURL = JSONCompany.getPortalURL();
		var repositoryId = JSONGroupAPI._getSiteIdByGroupKey(groupName = "${groupName}");

		var curl = '''
			${portalURL}/api/jsonws/dlapp/add-file-shortcut \
			-u test@liferay.com:test \
			-d repositoryID=${repositoryId} \
			-d folderId=${folderId} \
			-d toFileEntryId=${fileEntryId} 
		''';

		echo("## Adding a 'File Shortcut' with the following info using JSONWS:");

		echo("## * Shortcut Title: ${dmDocumentTitle}");

		var messageId = JSONCurlUtil.post("${curl}");
	}

}