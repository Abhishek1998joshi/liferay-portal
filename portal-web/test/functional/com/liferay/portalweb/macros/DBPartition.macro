definition {

	macro validateSchemas {
		var liferayHome = PropsUtil.get("liferay.home.dir.name");

		AntCommand(
			locator1 = "build-test.xml",
			value1 = "validate-dbpartition-schemas -Dschema.name.prefix=${schemaNamePrefix}");

		var result = FileUtil.read("${liferayHome}/validateoutput.txt");

		if (contains("${result}", "invalid company ID")) {
			fail("Failed to validate DB Partition schemas.");
		}
	}

}