definition {

	macro viewCards {
		var key_cardTitle = "${cardTitle}";

		AssertTextEquals(
			locator1 = "ACCards#CARD_TITLE",
			value1 = "${cardTitle}");
	}

	macro viewGeomapContainerFillColor {
		MouseOver(
			element = "",
			key_cardTitle = "${cardTitle}",
			locator1 = "ACCards#GEOMAP_CONTAINER");

		MouseMove(
			element = "",
			key_cardTitle = "${cardTitle}",
			locator1 = "ACCards#GEOMAP_CONTAINER",
			value1 = "0,100");

		MouseMove(
			element = "",
			key_cardTitle = "${cardTitle}",
			locator1 = "ACCards#GEOMAP_CONTAINER",
			value1 = "0,-100");

		MouseMove(
			element = "",
			key_cardTitle = "${cardTitle}",
			locator1 = "ACCards#GEOMAP_CONTAINER",
			value1 = "100,0");

		MouseMove(
			element = "",
			key_cardTitle = "${cardTitle}",
			locator1 = "ACCards#GEOMAP_CONTAINER",
			value1 = "-100,0");

		MouseOver(
			element = "//*[name()='path'][contains(@style,'fill: ${fillColor}')]",
			key_cardTitle = "${cardTitle}",
			locator1 = "ACCards#GEOMAP_CONTAINER");

		AssertVisible(
			key_content = "${country}",
			locator1 = "Tooltip#FLOATING_TOOLTIP_CONTENT");
	}

	macro viewGeomapTableText {
		AssertTextEquals(
			key_cardTitle = "${cardTitle}",
			locator1 = "ACCards#GEOMAP_TABLE_TEXT",
			position = "left",
			value1 = "${leftText}");

		AssertTextEquals(
			key_cardTitle = "${cardTitle}",
			locator1 = "ACCards#GEOMAP_TABLE_TEXT",
			position = "right",
			value1 = "${rightText}");
	}

	macro viewMetricBarStyle {
		AssertAttributeValue(
			attribute1 = "style",
			entryName = "${entryName}",
			key_cardTitle = "${cardTitle}",
			locator1 = "ACCards#METRIC_BAR",
			value1 = "${style}");

		AssertCssValue(
			entryName = "${entryName}",
			key_cardTitle = "${cardTitle}",
			locator1 = "ACCards#METRIC_BAR",
			locator2 = "background-color",
			value1 = "${backgroundColor}");
	}

	macro viewMetricValue {
		AssertTextEquals(
			key_cardTitle = "${cardTitle}",
			key_metricName = "${metricName}",
			locator1 = "ACCards#METRIC_VALUE",
			value1 = "${metricValue}");
	}

	macro viewTableEntryInfo {
		AssertVisible(
			column = "${column}",
			entryInfo = "${entryInfo}",
			entryName = "${entryName}",
			key_cardTitle = "${cardTitle}",
			locator1 = "ACCards#TABLE_ENTRY_INFO");
	}

	macro viewTopSitesByIndexes {
		AssertElementPresent(
			key_entryName = "${key_entry}",
			key_indexNumber = "${key_index}",
			locator1 = "ACSites#TOP_PAGES_INDEXES");
	}

}