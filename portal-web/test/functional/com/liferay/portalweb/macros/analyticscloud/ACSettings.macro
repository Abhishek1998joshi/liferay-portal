definition {

    macro loginAs {

        if(!(isSet(emailAddress))){
            emailAddress = "test@liferay.com";
        }

        if(!(isSet(password))){
            password = "test@liferay.com";
        }

		Click(locator1 = "ACSettings#EMAIL_LOGIN_FIELD");

		Type(
			locator1 = "ACSettings#EMAIL_LOGIN_FIELD",
			value1 = "${emailAddress}");

		Click(locator1 = "ACSettings#PASSWORD_LOGIN_FIELD");

		Type(
			locator1 = "ACSettings#PASSWORD_LOGIN_FIELD",
			value1 = "${password}");

		Click(locator1 = "ACSettings#LOGIN_BUTTON");
	}

    macro openWorkspace {

        var key_WorkspaceName = "${workspaceName}";

        Click(locator1 = "ACSettings#WORKSPACE_NAME");

    }

    macro switchWorkspace {

        Click(locator1 = "ACSettings#USER_MENU_SIDEBAR_OPTION");

        Click(locator1 = "ACSettings#SWITCH_WORKSPACE_OPTION");

        ACSettings.openWorkspace(workspaceName = "${workspaceName}");

    }

    macro signOut {

        Click(locator1 = "ACSettings#USER_MENU_SIDEBAR_OPTION");

        Click(locator1 = "ACSettings#LOGOUT_WORKSPACE_OPTION");

    }

    macro expandSidebar {
        if(IsElementPresent(locator1 = "ACSettings#EXPAND_SIDEBAR_ARROW")){
            Click(locator1 = "ACSettings#EXPAND_SIDEBAR_ARROW");
        }
    }

    macro collapseSidebar {
        if(IsElementPresent(locator1 = "ACSettings#COLLAPSE_SIDEBAR_ARROW")){
            Click(locator1 = "ACSettings#COLLAPSE_SIDEBAR_ARROW");
        }
    }
}