definition {

	macro gotoEdit {
		var key_card = "${repositoryName}";

		Click(
			locator1 = "LexiconCard#CARD_ELLIPSIS",
			value1 = "${repositoryName}");

		AssertClick(
			key_menuItem = "Edit",
			locator1 = "MenuItem#ANY_MENU_ITEM",
			value1 = "Edit");
	}

	macro gotoRepository {
		var key_card = "${repositoryName}";

		Click(
			locator1 = "LexiconCard#CARD_TITLE",
			value1 = "${repositoryName}");

		AssertTextEquals(
			locator1 = "ControlMenu#HEADING",
			value1 = "Documents and Media");
	}

}