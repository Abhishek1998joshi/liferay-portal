@default = "confirm"
@summary = "Execute the confirmation of a confirmation window"
definition {

	function confirm {
		selenium.getConfirmation();

		selenium.assertJavaScriptErrors();

		selenium.assertLiferayErrors();

		WaitForSPARefresh();
	}

	function acceptAlert {
   		selenium.acceptAlert();
   	}

   	function dismissAlert {
   		selenium.dismissAlert();
   	}

    function assertAlertText {
    	selenium.assertAlertText();
    }

    function typeAlert {
    	selenium.typeAlert();
    }

}