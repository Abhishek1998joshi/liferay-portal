		MessageBoardsAdmin.openMessageBoardsAdmin(siteURLKey = "guest");

		MessageboardsCategory.deleteCP(
			assetType = "Message Boards Category",
			categoryName = "質問トピック");

		Navigator.gotoPage(pageName = "Questions Page");

		Questions.viewDefault();
	}

