		task ("Get site assigned property name") {
			var propertyName = ACDXPSettings.getSiteAssignedPropertyName(siteName = "Site Name");
		}

		JSONUser.addUser(
			userEmailAddress = "liferay@liferay.com",
			userFirstName = "liferay",
